{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "RaceTrackerConfiguration",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "ApiEndpoint": {
      "type": "string",
      "description": "API endpoint",
      "default": "http://localhost:3333"
    },
    "ApiKey": {
      "type": "string",
      "description": "API key",
      "default": "1234567890"
    },
    "ServerId": {
      "type": "string",
      "description": "The unique ID that will be sent as part of the API POST request",
      "default": ""
    },
    "Game": {
      "type": "string",
      "description": "The game slug",
      "default": "assetto-corsa"
    },
    "RaceId": {
      "type": "string",
      "description": "The game event id",
      "default": ""
    }
  }
}